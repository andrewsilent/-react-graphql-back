{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "strict": true,
    "alwaysStrict": true,
    "sourceMap": true,
    "sourceRoot": "/",
    "inlineSources": true,
    "outDir": "build",
    "target": "ES2018",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "noEmitOnError": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js"
  ],
  "exclude": [
    "src/**/*.spec.js",
    "src/**/*.spec.ts",
  ]
}